@model LorcanaCardCollector.Models.Cards

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-light freckle-font">Edit Card</h1>
<hr />
<div class="row text-light">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group mb-sm-2">
                <label asp-for="CardName" class="control-label"></label>
                <input asp-for="CardName" class="form-control" />
                <span asp-validation-for="CardName" class="text-danger"></span>
            </div>
            <div class="form-group mb-sm-2">
                <label asp-for="GemColor" class="control-label"></label>
                <select asp-for="GemColor" class="form-control" asp-items="Html.GetEnumSelectList<GemColor>()"></select>
                <span asp-validation-for="GemColor" class="text-danger"></span>
            </div>
            <div class="form-group mb-sm-2">
                <label asp-for="SetName" class="control-label"></label>
                <input asp-for="SetName" class="form-control" />
                <span asp-validation-for="SetName" class="text-danger"></span>
            </div>
            <div class="form-group mb-sm-2">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group form-check mt-sm-2 mb-sm-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="InADeck" /> @Html.DisplayNameFor(model => model.InADeck)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary me-sm-3" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
