@model LorcanaCardCollector.Models.Cards

@{
    ViewData["Title"] = "Delete";
}

<h1 class="freckle-font" style="color: #d5b88b">Delete Card</h1>

<h3 class="text-danger">Are you sure you want to delete this?</h3>
<div class="bg-opacity-70 bg-light ps-sm-4 rounded shadow-sm ">
    <h4>Card</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CardName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CardName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GemColor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GemColor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SetName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SetName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InADeck)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.InADeck)
            {
                <span class="text-success">✓</span>
            }
            else
            {
                <span class="text-danger">X</span>
            }
        </dd>
    </dl>
    </div>
    <div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger mb-sm-2 me-sm-3" />
        <a asp-action="Index" class="btn btn-secondary mb-sm-2">Back to List</a>

    </form>
</div>
